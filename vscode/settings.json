{
    // VSCode settings
    "window.zoomLevel": 1,
    "editor.rulers": [120],
    "editor.inlineSuggest.enabled": true,
    // ignore the extension recommendation in the beginning
    "extensions.ignoreRecommendations": true,
    // C++ settings
    "cpplint.lineLength": 120,

    // For VIM
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true, // Copy paste with system clipboard
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // Vim Insert mode Key bindings
    "vim.insertModeKeyBindings": [
    ],
    // Vim Normal mode Key bindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
        "before": ["K"],
        "commands": ["lineBreakInsert"],
        "silent": true
        }
    ],
    // Vim Visual mode Key bindings
    "vim.visualModeKeyBindingsNonRecursive": [
        // After pasting using p, store the pasted text in the default register so that it can be pasted again
        {
            "before": ["p"],
            "commands": ["editor.action.clipboardPasteAction"],
        }
    ],
    "vim.leader": "<space>",  // Leader key as 'space'
    "vim.handleKeys": {
        "<C-a>": false, // disable ctrl + a for vim, and use select all
        "<C-f>": false, // disable ctrl + f for vim, and use find
    },

    // In the OS keyCode, I've changed capslock and escape key
    // Use keyCode instead of code for keybindings
    "keyboard.dispatch": "keyCode",
}    // color customization
    "workbench.colorCustomizations": {
        "editor.background": "#292D3E",
        "sideBar.background": "#292D3E",
        "activityBar.background": "#1b1d29",
        "tab.activeBackground": "#292D3E",
        "tab.inactiveBackground": "#1d1f2c",
        "editorGroupHeader.tabsBackground": "#1b1d29",
        "editorGroupHeader.tabsBorder": "#000000",
        "editorLineNumber.foreground": "#676E95",
        "editorLineNumber.activeForeground": "#ffffff",
        "statusBar.background": "#1b1d29",
        "sideBar.border": "#000000",
        "sideBar.foreground": "#ffffff"
    },

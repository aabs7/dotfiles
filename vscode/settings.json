{
    "editor.rulers": [
        120
    ],
    "editor.inlineSuggest.enabled": true,
    // ignore the extension recommendation in the beginning
    "extensions.ignoreRecommendations": true,
    // C++ settings
    "cpplint.lineLength": 120,
    // C++ ignore warning for using long instead of int16/64
    "cpplint.filters": [
        "-runtime/int"
    ],

    // For VIM
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true, // Copy paste with system clipboard
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // Vim Insert mode Key bindings
    "vim.insertModeKeyBindings": [
    ],
    // Vim Normal mode Key bindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
        "before": ["K"],
        "commands": ["lineBreakInsert"],
        "silent": true
        }
    ],
    // Vim Visual mode Key bindings
    "vim.visualModeKeyBindingsNonRecursive": [
        // After pasting using p, store the pasted text in the default register so that it can be pasted again
        {
            "before": ["p"],
            "commands": ["editor.action.clipboardPasteAction"],
        }
    ],
    "vim.leader": "<space>",  // Leader key as 'space'
    "vim.handleKeys": {
        // "<C-a>": false, // disable ctrl + a for vim, and use select all
        "<C-f>": false, // disable ctrl + f for vim, and use find
        "<C-p>": false, // disable ctrl + p for vim, and use fuzzy search
        // disable Ctrl + k + f for vim, and use vs code formatter
        "<C-k>": false,
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // In the OS keyCode, I've changed capslock and escape key
    // Use keyCode instead of code for keybindings
    "keyboard.dispatch": "keyCode",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false,
        "python": true
    },
    "editor.fontFamily": "JetBrains Mono,'Cascadia Code', monospace",
    "editor.fontSize": 19,
    "editor.wordWrap": "on",
    "terminal.integrated.fontSize": 16,

    // Trim whitespace
    "diffEditor.ignoreTrimWhitespace": false,
    "notebook.lineNumbers": "on",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",
    "window.zoomLevel": 0.1,

    // Python formatting
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "flake8.args": [
        "--max-line-length=120"
    ],
    "workbench.colorTheme": "Default Dark+"
}
